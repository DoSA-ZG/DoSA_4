@model RPPP_WebApp.Model.Purchase

<hr />
<h4>Purchase details</h4>
<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CollectedOn)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CollectedOn)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Weight)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Weight)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Gain)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Gain)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tag)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tag)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Harvest)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Harvest.IdHarvest)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Order)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Order.Description)
        </dd>
    </dl>
</div>
<div class="d-flex">
    <a class="btn btn-warning text-white me-2" onclick="loadEditForm(@Model.IdPurchase)" data-toggle="modal" data-target="#editPurchaseModal">Edit</a>

    <form id="deleteForm" asp-action="Delete" asp-controller="Purchase" method="post">
        <input type="hidden" asp-for="IdPurchase" />
        <button type="button" class="btn btn-danger" onclick="deletePurchase(@Model.IdPurchase)">Delete</button>
    </form>


</div>


<a class="btn btn-secondary text-white mt-3" asp-action="Details" asp-controller="Harvest" asp-route-id="@Model?.HarvestId">Back to List</a>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}