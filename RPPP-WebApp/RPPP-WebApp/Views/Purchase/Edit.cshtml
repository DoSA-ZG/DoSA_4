@model RPPP_WebApp.Model.Purchase

<h4>Edit Purchase</h4>
<hr />

<form asp-action="Edit" asp-controller="Purchase" asp-route-id="@Model.IdPurchase" method="post" id="purchaseForm">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="HarvestId" />
    <input type="hidden" asp-for="IdPurchase" />

    <table class="table">
        <tr>
            <td>
                <label asp-for="CollectedOn" class="control-label"></label>
            </td>
            <td>
                <input asp-for="CollectedOn" class="form-control" />
                <span asp-validation-for="CollectedOn" class="text-danger"></span>
            </td>


            <td>
                <label asp-for="Weight" class="control-label"></label>
            </td>
            <td>
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </td>


            <td>
                <label asp-for="Gain" class="control-label"></label>
            </td>
            <td>
                <input asp-for="Gain" class="form-control" />
                <span asp-validation-for="Gain" class="text-danger"></span>
            </td>


            <td>
                <label asp-for="Tag" class="control-label"></label>
            </td>
            <td>
                <input asp-for="Tag" class="form-control" />
                <span asp-validation-for="Tag" class="text-danger"></span>
            </td>


            <td>
                <label asp-for="OrderId" class="control-label"></label>
            </td>
            <td>
                <select asp-for="OrderId" class="form-control" asp-items="ViewBag.OrderId"></select>
                <span asp-validation-for="OrderId" class="text-danger"></span>
            </td>


            <td>
                <label asp-for="HarvestId" class="control-label"></label>
            </td>
            <td>
                <select asp-for="HarvestId" class="form-control" asp-items="ViewBag.HarvestId"></select>
                <span asp-validation-for="HarvestId" class="text-danger"></span>
            </td>
        </tr>
    </table>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10 mt-2">
            <input type="submit" value="Save" class="btn btn-success" id="savePurchaseBtn" />

            <form id="deleteForm" asp-action="Delete" asp-controller="Purchase" method="post">
                <input type="hidden" asp-for="IdPurchase" />
                <button type="button" class="btn btn-danger" onclick="deletePurchase(@Model.IdPurchase)">Delete</button>
            </form>


        </div>
    </div>



</form>

<div>
    <a class="btn btn-secondary text-white mt-3" asp-action="Details" asp-controller="Harvest" asp-route-id="@Model?.HarvestId">Back to List</a>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}