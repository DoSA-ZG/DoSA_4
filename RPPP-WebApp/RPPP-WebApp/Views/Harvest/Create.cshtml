@model RPPP_WebApp.Model.Harvest

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="CollectedOn" class="control-label"></label>
                <input asp-for="CollectedOn" class="form-control" />
                <span asp-validation-for="CollectedOn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Weight" class="control-label"></label>
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tag" class="control-label"></label>
                <input asp-for="Tag" class="form-control" />
                <span asp-validation-for="Tag" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedPlantClassName" class="control-label"></label>
                <input type="text" id="plantClassAutocomplete" name="SelectedPlantClassName" class="form-control" />
                <!-- Hidden field to store the selected VegetationId -->
                <input type="hidden" id="selectedVegetationId" name="SelectedVegetationId" />
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10 mt-2">
                    <input type="submit" value="Create" class="btn btn-success" />
                </div>
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a class="btn btn-secondary text-white" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
