@model RPPP_WebApp.Model.Ingredient

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Ingredient</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PlantClass)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PlantClass.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Recipe.Caption)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdIngredient" />
        <input type="submit" value="Delete" class="btn btn-danger mt-3" /> 
        <a asp-action="Index" asp-controller="Recipe" class="btn btn-secondary">Back to List</a>
    </form>
</div>
