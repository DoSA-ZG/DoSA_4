@model RPPP_WebApp.Model.Ingredient

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Ingredient</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PlantClassId" class="control-label"></label>
                <select asp-for="PlantClassId" class ="form-control" asp-items="ViewBag.PlantClassId"></select>
            </div>
            <div class="form-group">
                <label asp-for="SelectedRecipe" class="control-label"></label>
                <input type="text" id="recipeAutocomplete" name="SelectedRecipe" class="form-control" />
                <input type="hidden" id="selectedRecipeId" name="SelectedRecipeId" />
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10 mt-3">
                    <input type="submit" value="Add to recipe" class="btn btn-success" />
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Recipe" class="btn btn-secondary mt-3">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
