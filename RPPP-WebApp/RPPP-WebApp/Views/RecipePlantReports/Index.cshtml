@{
    ViewData["Title"] = "Reports";
}

<div class="container mt-4">
    <div class="row">
        <div class="col">
            <a class="btn btn-primary btn-lg btn-block" asp-action="SimpleRecipeReport" asp-controller="RecipePlantReports">Simple recipe report</a>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col">
            <a class="btn btn-primary btn-lg btn-block" asp-action="RecipePlantExcel" asp-controller="RecipePlantReports">Recipe-Plant(master-detail) report Excel </a>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col">
            <a class="btn btn-primary btn-lg btn-block" asp-action="SimpleExcelRecipeReport" asp-controller="RecipePlantReports">Simple recipe report Excel</a>
        </div>
    </div>

    <div class="row mt-4">
        <form method="post" action="@Url.Action("UploadModifiedRecipe", "RecipePlantReports")" enctype="multipart/form-data">
            <div class="form-group">
                <label for="file">Select Excel file:</label>
                <input type="file" class="form-control-file" id="file" name="file" />
            </div>
            <button type="submit" class="btn btn-info btn-lg btn-block mt-2">Submit and download</button>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

